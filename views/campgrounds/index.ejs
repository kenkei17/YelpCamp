    <% layout('layouts/boilerplate.ejs') %> 
    <h1>All Campgrounds</h1>
    <a href="/campgrounds/new">List new</a>
 
        <% for(let camp of campgrounds) {%> 
            <div class="card cardAll">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" src="<%=camp.image%>" alt="">
                    </div>
                    <div class="col-md-8 py-2">
                        <h3 class="card-title"><%=camp.title%></h3>
                        <p class="card-text"><%=camp.description %> </p>
                        
                        <p class="card-text text-muted"><%=camp.location %> </p>
                        <a class="btn btn-primary" href="/campgrounds/<%=camp._id  %> ">View <%=camp.title %> </a>
                    </div>
                </div>
            </div>
           
        <% } %> 

    
